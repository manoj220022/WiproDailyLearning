package com.example.wipro.entities;

import com.example.wipro.enums.Facility;
import jakarta.persistence.*;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import lombok.*;

import java.math.BigDecimal;
import java.util.Set;

@Entity
@Table(name = "houses")
@Data
@AllArgsConstructor
@NoArgsConstructor
@Builder
public class House {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @NotBlank(message = "House name is required")
    private String name;

    @NotBlank(message = "Address is required")
    private String address;

    @NotNull(message = "Price is required")
    private BigDecimal pricePerNight;

    @ElementCollection(targetClass = Facility.class)
    @CollectionTable(name = "house_facilities", joinColumns = @JoinColumn(name = "house_id"))
    @Enumerated(EnumType.STRING)
    private Set<Facility> facilities;

    @Column(length = 1000)
    private String description;
}
